<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.softsociety.maru.dao.PostDAO">

	<insert id="insert" parameterType="Post">
		insert into post 
		values 
				(post_seq.nextval, #{title}, #{building_type_num}, #{price} ,#{area} , #{buildiing_size})
	</insert>

	<delete id="delete" parameterType="integer">
		delete from post
		where post_num = #{post_num}
	</delete>

	<update id="update" parameterType="integer">
		update post
		set title= #{title}, building_type_num = #{building_type_num}, price= #{price}, area = #{area}, building_size= #{building_size}
		where post_num = #{post_num}
	</update>
	
	<select id="selectOne" parameterType="integer">
		select*from post
		where post_num = #{post_num}
	</select>
	
	<select id="selectAll" resultType="Post">
		select*from post
	</select>
</mapper>